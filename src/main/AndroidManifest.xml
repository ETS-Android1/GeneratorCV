<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.remindapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity"></activity>
        <activity android:name=".activities.AbilitiesActivity"></activity>
        <activity android:name=".activities.HobbiesActivity"></activity>
        <activity android:name=".activities.EducationActivity"></activity>
        <activity android:name=".activities.ExperienceActivity"></activity>
        <activity android:name=".activities.ChooseCvTemplateActivity"></activity>
        <activity android:name=".activities.SuccessfullActivity"></activity>
        <activity android:name=".activities.CoursesActivity"></activity>

    </application>

</manifest>